<Window x:Class="zad4.CategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Category" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="subcategoryListBox" HorizontalAlignment="Center" VerticalAlignment="Center"
                 SelectionChanged="SubcategoryListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
